<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<section class="inline-center content-margin">
	<h1>Login</h1>
	<form>
		<div class="content-margin">
			<input name="id" type="text" class="text text-lg" placeholder="ID" />
		</div>
		<div class="content-margin">
			<input name="password" type="password" class="text text-lg"
				placeholder="PASSWORD" />
		</div>
		<div class="content-margin button-group">
			<button type="submit" class="button button-lg">Login</button>
			<button type="button" class="button button-lg">Join</button>
		</div>
	</form>
</section>