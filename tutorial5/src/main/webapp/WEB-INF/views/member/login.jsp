<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<script type="text/javascript" src="/resources/js/member/login.js"></script>	
<section id="login-form" class="inline-center content-margin">
	<h1>Login</h1>
	<form method="post">
		<div class="content-margin">
			<input name="username" type="text" class="text text-lg" placeholder="ID" />
		</div>
		<div class="content-margin">
			<input name="password" type="password" class="text text-lg"
				placeholder="PASSWORD" />
		</div>
		<div class="content-margin button-group">
			<button type="submit" class="button button-lg login-button">Login</button>
			<button type="button" class="button button-lg join-button">Join</button>
		</div>
	</form>
</section>